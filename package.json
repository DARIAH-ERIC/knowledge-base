{
	"private": true,
	"license": "MIT",
	"type": "module",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"build": "turbo run build",
		"db:migrations:apply": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:migrations:apply",
		"db:migrations:check": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:migrations:check",
		"db:migrations:generate": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:migrations:generate",
		"db:push": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:push",
		"db:reset": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:reset",
		"db:seed": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:seed",
		"db:studio": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-database-client run db:studio",
		"dev": "turbo run dev",
		"dev:services:down": "sh ./scripts/services.sh stop",
		"dev:services:up": "sh ./scripts/services.sh start",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "prettier . --cache --cache-location ./.prettiercache --check --write",
		"lint:check": "turbo run lint:check",
		"lint:fix": "turbo run lint:fix",
		"prepare": "run-s setup",
		"search-index:api-keys:generate": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-search-index run search-index:api-keys:generate",
		"search-index:collections:create": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-search-index run search-index:collections:create",
		"search-index:collections:ingest": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-search-index run search-index:collections:ingest",
		"search-index:collections:seed": "dotenv -e ./.devcontainer/.env -- turbo --filter dariah-knowledge-base-search-index run search-index:collections:seed",
		"setup": "is-in-ci || simple-git-hooks",
		"test": "turbo run test",
		"test:e2e": "turbo run test:e2e",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:update-snapshots": "turbo run test:e2e:update-snapshots",
		"types:check": "turbo run types:check"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "catalog:",
		"@playwright/test": "catalog:",
		"dotenv-cli": "catalog:",
		"is-in-ci": "catalog:",
		"lint-staged": "catalog:",
		"npm-run-all2": "catalog:",
		"prettier": "catalog:",
		"simple-git-hooks": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	}
}
