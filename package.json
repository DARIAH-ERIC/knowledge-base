{
	"private": true,
	"license": "MIT",
	"type": "module",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.21.0",
	"scripts": {
		"build": "pnpm run --recursive build",
		"dev:services:down": "bash ./scripts/stop-all-services.sh",
		"dev:services:up": "bash ./scripts/start-all-services.sh",
		"dev:services:drizzle-gateway:down": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.drizzle-gateway.yaml down --volumes",
		"dev:services:drizzle-gateway:up": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.drizzle-gateway.yaml up --detach",
		"dev:services:imgproxy:down": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.imgproxy.yaml down --volumes",
		"dev:services:imgproxy:up": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.imgproxy.yaml up --detach",
		"dev:services:mailpit:down": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.mailpit.yaml down --volumes",
		"dev:services:mailpit:up": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.mailpit.yaml up --detach",
		"dev:services:postgres:down": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.postgres.yaml down --volumes",
		"dev:services:postgres:up": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.postgres.yaml up --detach",
		"dev:services:typesense:down": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.typesense.yaml down --volumes",
		"dev:services:typesense:up": "docker compose --env-file=./apps/knowledge-base/.env.local -f ./.devcontainer/docker-compose.typesense.yaml up --detach",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "prettier . --cache --cache-location ./.prettiercache --check --write",
		"lint:check": "pnpm run --recursive lint:check",
		"lint:fix": "pnpm run --recursive lint:fix",
		"prepare": "is-in-ci || simple-git-hooks",
		"test": "pnpm run --recursive test",
		"test:e2e": "pnpm run --recursive test:e2e",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:update-snapshots": "pnpm run --recursive test:e2e:update-snapshots",
		"types:check": "pnpm run --recursive types:check"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "catalog:",
		"@playwright/test": "catalog:",
		"is-in-ci": "catalog:",
		"lint-staged": "catalog:",
		"npm-run-all2": "catalog:",
		"prettier": "catalog:",
		"simple-git-hooks": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	}
}
