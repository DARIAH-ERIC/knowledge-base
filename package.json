{
	"private": true,
	"license": "MIT",
	"type": "module",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"build": "pnpm run --recursive build",
		"db:migrations:apply": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-database-client run db:migrations:apply",
		"db:migrations:check": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-database-client run db:migrations:check",
		"db:migrations:generate": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-database-client run db:migrations:generate",
		"db:push": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-database-client run db:push",
		"db:studio": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-database-client run db:studio",
		"dev": "pnpm run --aggregate-output --parallel --recursive dev",
		"dev:services:down": "sh ./scripts/services.sh stop",
		"dev:services:up": "sh ./scripts/services.sh start",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "prettier . --cache --cache-location ./.prettiercache --check --write",
		"image-service:buckets:create": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run image-service:buckets:create",
		"image-service:buckets:seed": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run image-service:buckets:seed",
		"lint:check": "pnpm run --recursive lint:check",
		"lint:fix": "pnpm run --recursive lint:fix",
		"prepare": "run-s setup",
		"search-index:api-keys:generate": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run search-index:api-keys:generate",
		"search-index:collections:create": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run search-index:collections:create",
		"search-index:collections:ingest": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run search-index:collections:ingest",
		"search-index:collections:seed": "dotenv -e ./.devcontainer/.env -- pnpm --filter dariah-knowledge-base-search-index run search-index:collections:seed",
		"setup": "is-in-ci || simple-git-hooks",
		"test": "pnpm run --recursive test",
		"test:e2e": "pnpm run --recursive test:e2e",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:update-snapshots": "pnpm run --recursive test:e2e:update-snapshots",
		"types:check": "pnpm run --recursive types:check"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "catalog:",
		"@playwright/test": "catalog:",
		"dotenv-cli": "catalog:",
		"is-in-ci": "catalog:",
		"lint-staged": "catalog:",
		"npm-run-all2": "catalog:",
		"prettier": "catalog:",
		"simple-git-hooks": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	}
}
