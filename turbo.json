{
	"$schema": "https://turborepo.com/schema.v2.json",
	"globalEnv": [
		"DATABASE_HOST",
		"DATABASE_NAME",
		"DATABASE_PASSWORD",
		"DATABASE_PORT",
		"DATABASE_SSL_CONNECTION",
		"DATABASE_USER",
		"EMAIL_ADDRESS",
		"EMAIL_SMTP_PASSWORD",
		"EMAIL_SMTP_PORT",
		"EMAIL_SMTP_SERVER",
		"EMAIL_SMTP_USERNAME",
		"IMGPROXY_BASE_URL",
		"IMGPROXY_KEY",
		"IMGPROXY_PORT",
		"IMGPROXY_SALT",
		"NEXT_PUBLIC_TYPESENSE_COLLECTION_NAME",
		"NEXT_PUBLIC_TYPESENSE_HOST",
		"NEXT_PUBLIC_TYPESENSE_PORT",
		"NEXT_PUBLIC_TYPESENSE_PROTOCOL",
		"NEXT_PUBLIC_TYPESENSE_SEARCH_API_KEY",
		"S3_BUCKET",
		"S3_ACCESS_KEY",
		"S3_HOST",
		"S3_PORT",
		"S3_PROTOCOL",
		"S3_SECRET_KEY",
		"TYPESENSE_ADMIN_API_KEY"
	],
	"globalPassThroughEnv": ["CI", "NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["BUILD_MODE"],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#format:check": {},
		"//#format:fix": {},
		"format:check": {},
		"format:fix": {},
		"lint:check": {
			"dependsOn": ["^lint:check"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"start": {
			"dependsOn": ["build"]
		},
		"test": {},
		"test:e2e": {
			"dependsOn": ["build"],
			"env": ["PLAYWRIGHT_TEST_APP_BASE_URL", "PORT"]
		},
		"test:e2e:update-snapshots": {
			"dependsOn": ["build"],
			"env": ["PLAYWRIGHT_TEST_APP_BASE_URL", "PORT"]
		},
		"types:check": {
			"dependsOn": ["^types:check"]
		}
	},
	"ui": "tui"
}
