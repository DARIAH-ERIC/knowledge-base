{
	"$schema": "https://turborepo.com/schema.v2.json",
	"globalEnv": [
		"DATABASE_HOST",
		"DATABASE_NAME",
		"DATABASE_PASSWORD",
		"DATABASE_PORT",
		"DATABASE_USER"
	],
	"globalPassThroughEnv": ["CI", "NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["BUILD_MODE"],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#format:check": {},
		"//#format:fix": {},
		"format:check": {},
		"format:fix": {},
		"lint:check": {
			"dependsOn": ["^lint:check"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"start": {
			"dependsOn": ["build"]
		},
		"test": {},
		"test:e2e": {
			"dependsOn": ["build"],
			"env": ["PLAYWRIGHT_TEST_APP_BASE_URL", "PORT"]
		},
		"test:e2e:update-snapshots": {
			"dependsOn": ["build"],
			"env": ["PLAYWRIGHT_TEST_APP_BASE_URL", "PORT"]
		},
		"types:check": {
			"dependsOn": ["^types:check"]
		}
	},
	"ui": "tui"
}
