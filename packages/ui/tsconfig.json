{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": "@dariah-eric/dariah-knowledge-base-configs/typescript/lib",
	"compilerOptions": {
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
		"./**/*.tsx",
		"./types/**/*.d.ts",
		"./.storybook/**/*.ts",
		"./.storybook/**/*.tsx"
	],
	"exclude": ["dist", "node_modules", "storybook-static"],
	"mdx": {
		"checkMdx": false,
		"plugins": []
	}
}
