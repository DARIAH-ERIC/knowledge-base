{
	"name": "@dariah-eric/search",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "24.x"
	},
	"exports": {
		"./client": "./dist/client.mjs",
		"./lib": "./src/lib/index.ts",
		"./schema": "./dist/schema.mjs"
	},
	"files": [
		"./dist/"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"format:check": "prettier . --cache --cache-location ./../../.prettiercache --check --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore",
		"format:fix": "prettier . --cache --cache-location ./../../.prettiercache --check --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --write",
		"lint:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:fix": "eslint . --fix --flag unstable_native_nodejs_ts_config",
		"search:api-keys:generate": "tsx ./scripts/generate-search-api-key.ts",
		"search:collections:create": "tsx ./scripts/create-collection.ts",
		"search:collections:ingest": "tsx ./scripts/ingest.ts",
		"search:collections:reset": "tsx ./scripts/reset.ts",
		"search:collections:seed": "tsx ./scripts/seed.ts",
		"types:check": "tsc --noEmit"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "catalog:",
		"@acdh-oeaw/validate-env": "catalog:",
		"is-network-error": "catalog:",
		"typesense": "catalog:",
		"valibot": "catalog:"
	},
	"devDependencies": {
		"@dariah-eric/configs": "workspace:^",
		"@faker-js/faker": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"tsdown": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	},
	"browserslist": {
		"development": [
			"baseline newly available"
		],
		"production": [
			"baseline widely available"
		]
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./../../.prettiercache --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --write"
		],
		"*.!(js|ts)": "prettier --cache --cache-location ./../../.prettiercache --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --ignore-unknown --write"
	},
	"prettier": "@dariah-eric/configs/prettier"
}
