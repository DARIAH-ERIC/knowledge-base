{
	"name": "@dariah-eric/dariah-knowledge-base-database-client",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24.12.0",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.25.0",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./src/index.ts"
		},
		"./client": {
			"types": "./dist/src/client.d.ts",
			"default": "./src/client.ts"
		},
		"./relations": {
			"types": "./dist/src/relations.d.ts",
			"default": "./src/relations.ts"
		},
		"./schema": {
			"types": "./dist/src/schema.d.ts",
			"default": "./src/schema.ts"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "rm -rf dist && tsc --project ./tsconfig.build.json",
		"db:migrations:apply": "drizzle-kit migrate --config=./config/drizzle.config.ts",
		"db:migrations:check": "drizzle-kit check --config=./config/drizzle.config.ts",
		"db:migrations:generate": "drizzle-kit generate --config=./config/drizzle.config.ts",
		"db:push": "drizzle-kit push --config=./config/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=./config/drizzle.config.ts",
		"dev": "tsc --preserveWatchOutput --project ./tsconfig.build.json --watch",
		"format:check": "prettier . --cache --cache-location ./../../.prettiercache --check --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore",
		"format:fix": "prettier . --cache --cache-location ./../../.prettiercache --check --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --write",
		"generate:dbml-schema": "tsx ./scripts/generate-dbml-schema.ts",
		"lint:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:fix": "eslint . --fix --flag unstable_native_nodejs_ts_config",
		"types:check": "tsc --noEmit"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "catalog:",
		"drizzle-orm": "catalog:",
		"drizzle-valibot": "catalog:",
		"pg": "catalog:",
		"valibot": "catalog:"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "catalog:",
		"@acdh-oeaw/eslint-config-node": "catalog:",
		"@acdh-oeaw/prettier-config": "catalog:",
		"@acdh-oeaw/tsconfig": "catalog:",
		"@types/node": "catalog:",
		"@types/pg": "catalog:",
		"concurrently": "catalog:",
		"drizzle-dbml-generator": "catalog:",
		"drizzle-kit": "catalog:",
		"eslint": "catalog:",
		"eslint-config-flat-gitignore": "catalog:",
		"eslint-plugin-check-file": "catalog:",
		"eslint-plugin-drizzle": "catalog:",
		"eslint-plugin-unicorn": "catalog:",
		"globals": "catalog:",
		"is-in-ci": "catalog:",
		"npm-run-all2": "catalog:",
		"prettier": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./../../.prettiercache --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --write"
		],
		"*.!(js|ts)": "prettier --cache --cache-location ./../../.prettiercache --ignore-path ./../../.gitignore --ignore-path ./../../.prettierignore --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config"
}
