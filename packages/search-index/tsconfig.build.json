{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"outDir": "${configDir}/dist"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
