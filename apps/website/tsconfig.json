{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": "@dariah-eric/configs/typescript/app",
	"compilerOptions": {
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
		"./**/*.tsx",
		"./next-env.d.ts",
		".next/dev/types/**/*.ts",
		".next/types/**/*.ts",
		"./types/**/*.d.ts"
	],
	"exclude": ["content", "node_modules", "out", "public"]
}
